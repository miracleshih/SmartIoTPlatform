<Window x:Class="RM_Send.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RM_Send"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <CheckBox Grid.Row="1" Grid.Column="0" Content="Enable period report" />
        <CheckBox Grid.Row="2" Grid.Column="0" Content="Send data to Queue1" />
        <CheckBox Grid.Row="3" Grid.Column="0" Content="Send data to Queue2" />
        <Button Grid.Row="4" Grid.Column="0" Content="Start" />
    </Grid>
</Window>
